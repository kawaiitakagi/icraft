{
  "version": 3,
  "configurePresets": [
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug",
      "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/install/${presetName}",
      "cacheVariables": { 
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": { "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": { "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}" } }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release",
      "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
      "inherits": "linux-x64-debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "linux-aarch64-debug",
      "displayName": "AArch64 Linux Debug",
      "description": "Target the aarch64 Linux system.",
      "inherits": "linux-x64-debug",
      "cacheVariables": { "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain_aarch64.cmake" }
    },
    {
      "name": "linux-aarch64-release",
      "displayName": "AArch64 Linux Release",
      "description": "Target the aarch64 Linux system.",
      "inherits": "linux-x64-release",
      "cacheVariables": { "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain_aarch64.cmake" }
    },
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/install/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
      "inherits": "windows-x64-debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    }
  ]
}